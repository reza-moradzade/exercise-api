{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install && bun run build"
  },
  "deploy": {
    "startCommand": "bun run start",
    "healthcheckPath": "/api/v1/exercises?limit=1",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
